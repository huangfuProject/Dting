<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.dting</groupId>
    <artifactId>dting</artifactId>
    <packaging>pom</packaging>
    <version>1.0.0.SNAPSHOT</version>
    <modules>
        <module>dting-core</module>
        <module>dting-sdk</module>
        <module>dting-message</module>
        <module>dting-common</module>
    </modules>


    <properties>
        <maven.compiler.source>8</maven.compiler.source>
        <maven.compiler.target>8</maven.compiler.target>

        <hutool-all.version>5.8.8</hutool-all.version>
        <junit.version>4.12</junit.version>
        <protostuff.version>1.8.0</protostuff.version>
        <netty.version>4.1.82.Final</netty.version>
        <sigar.version>1.6.4</sigar.version>
    </properties>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>com.dting</groupId>
                <artifactId>dting-core</artifactId>
                <version>${version}</version>
            </dependency>

            <dependency>
                <groupId>com.dting</groupId>
                <artifactId>dting-sdk</artifactId>
                <version>${version}</version>
            </dependency>

            <!--dting公共包-->
            <dependency>
                <groupId>com.dting</groupId>
                <artifactId>dting-common</artifactId>
                <version>${version}</version>
            </dependency>

            <!--消息服务公共包-->
            <dependency>
                <groupId>com.dting</groupId>
                <artifactId>dting-message-common</artifactId>
                <version>${version}</version>
            </dependency>

            <!--消息传递客户端包-->
            <dependency>
                <groupId>com.dting</groupId>
                <artifactId>dting-message-client</artifactId>
                <version>${version}</version>
            </dependency>

            <!--消息传递服务包-->
            <dependency>
                <groupId>com.dting</groupId>
                <artifactId>dting-message-server</artifactId>
                <version>${version}</version>
            </dependency>

            <!--开发工具包-->
            <dependency>
                <groupId>cn.hutool</groupId>
                <artifactId>hutool-all</artifactId>
                <version>${hutool-all.version}</version>
            </dependency>

            <!--序列化包-->
            <dependency>
                <groupId>io.protostuff</groupId>
                <artifactId>protostuff-core</artifactId>
                <version>${protostuff.version}</version>
            </dependency>

            <!--序列化包-->
            <dependency>
                <groupId>io.protostuff</groupId>
                <artifactId>protostuff-runtime</artifactId>
                <version>${protostuff.version}</version>
            </dependency>

            <!--netty服务包-->
            <dependency>
                <groupId>io.netty</groupId>
                <artifactId>netty-all</artifactId>
                <version>${netty.version}</version>
            </dependency>

            <!--服务器负载情况工具包-->
            <dependency>
                <groupId>org.fusesource</groupId>
                <artifactId>sigar</artifactId>
                <version>${sigar.version}</version>
            </dependency>



            <dependency>
                <groupId>junit</groupId>
                <artifactId>junit</artifactId>
                <version>${junit.version}</version>
                <scope>test</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>
</project>